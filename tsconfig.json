{
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
        "dom", 
        "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "@core/*": ["./core/*"],
      "@apps/*": ["./apps/*"],
      "@/*": ["*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "esnext",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
}